(define-type Subst (HashTable -e -e))

(define m‚àÖ : Subst (hash))

(define (e/map [m : Subst] [e : -e])

  (: go-list : Subst (Listof -e) ‚Üí (Listof -e))
  (define (go-list m es)
    (with-debugging/off
      ((ans) (for/list : (Listof -e) ([e es]) (go m e)))
      (printf "go-list: ~a ~a -> ~a~n" (show-subst m) (map show-e es) (map show-e ans))))

  (: go : Subst -e ‚Üí -e)
  (define (go m e)
    (with-debugging/off
      ((ans)
       (cond
         [(hash-empty? m) e]
         [(hash-ref m e #f) => values]
         [else
          (match e
            [(-Œª xs e*)
             (-Œª xs (go (shrink m (formals->names xs)) e*))]
            [(-case-Œª clauses)
             (define clauses*
               (for/list : (Listof (Pairof (Listof Var-Name) -e)) ([clause clauses])
                 (match-define (cons xs e‚Çì) clause)
                 (cons xs (go (shrink m (formals->names xs)) e‚Çì))))
             (-case-Œª clauses*)]
            [(-@ f xs ‚Ñì)
             (-@ (go m f) (go-list m xs) ‚Ñì)]
            [(-if e‚ÇÄ e‚ÇÅ e‚ÇÇ)
             (-if (go m e‚ÇÄ) (go m e‚ÇÅ) (go m e‚ÇÇ))]
            [(-wcm k v b)
             (-wcm (go m k) (go m v) (go m b))]
            [(-begin es)
             (-begin (go-list m es))]
            [(-begin0 e‚ÇÄ es)
             (-begin0 (go m e‚ÇÄ) (go-list m es))]
            [(-let-values bnds body)
             (define-values (bnds*-rev locals)
               (for/fold ([bnds*-rev : (Listof (Pairof (Listof Var-Name) -e)) '()]
                          [locals : (‚Ñò Var-Name) ‚àÖeq])
                         ([bnd bnds])
                 (match-define (cons xs e‚Çì) bnd)
                 (values (cons (cons xs (go m e‚Çì)) bnds*-rev)
                         (set-add-list locals xs))))
             (define body* (go (shrink m locals) body))
             (-let-values (reverse bnds*-rev) body*)]
            [(-letrec-values bnds body)
             (define locals
               (for/fold ([locals : (‚Ñò Var-Name) ‚àÖeq])
                         ([bnd bnds])
                 (match-define (cons xs _) bnd)
                 (set-add-list locals xs)))
             (define m* (shrink m locals))
             (define bnds* : (Listof (Pairof (Listof Var-Name) -e))
               (for/list ([bnd bnds])
                 (match-define (cons xs e‚Çì) bnd)
                 (cons xs (go m* e‚Çì))))
             (define body* (go m* body))
             (-letrec-values bnds* body*)]
            [(-set! x e*)
             (-set! x (go m e*))]
            [(-amb es)
             (-amb (for/set: : (‚Ñò -e) ([e es]) (go m e)))]
            [(-Œº/c z c)
             (-Œº/c z (go (shrink m {seteq z}) c))]
            [(--> cs d ‚Ñì)
             (--> (go-list m cs) (go m d) ‚Ñì)]
            [(-->i cs mk-d ‚Ñì)
             (-->i (go-list m cs) (assert (go m mk-d) -Œª?) ‚Ñì)]
            [(-case-> clauses ‚Ñì)
             (define clauses*
               (for/list : (Listof (Pairof (Listof -e) -e)) ([clause clauses])
                 (match-define (cons cs d) clause)
                 (cons (go-list m cs) (go m d))))
             (-case-> clauses* ‚Ñì)]
            [(-struct/c t cs ‚Ñì)
             (-struct/c t (go-list m cs) ‚Ñì)]
            [_
             ;(printf "unchanged: ~a @ ~a~n" (show-e e) (show-subst m))
             e])]))
      (printf "go: ~a ~a -> ~a~n" (show-subst m) (show-e e) (show-e ans))))

  (go m e))


(: fv : (U -e (Listof -e)) ‚Üí (‚Ñò Var-Name))
;; Compute free variables for expression. Return set of variable names.
(define (fv e)
  (match e
    [(-x x) {seteq x}]
    [(-Œª xs e)
     (define bound
       (match xs
         [(-varargs zs z) (set-add (list->seteq zs) z)]
         [(? list? xs) (list->seteq xs)]))
     (-- (fv e) bound)]
    [(-@ f xs _)
     (for/fold ([FVs (fv f)]) ([x xs]) (‚à™ FVs (fv x)))]
    [(-begin es) (fv es)]
    [(-begin0 e‚ÇÄ es) (‚à™ (fv e‚ÇÄ) (fv es))]
    [(-let-values bnds e)
     (define-values (bound FV_rhs)
       (for/fold ([bound : (‚Ñò Var-Name) ‚àÖeq] [FV_rhs : (‚Ñò Var-Name) ‚àÖeq]) ([bnd bnds])
         (match-define (cons xs rhs) bnd)
         (values (set-add-list bound xs) (‚à™ FV_rhs (fv rhs)))))
     (‚à™ FV_rhs (-- (fv e) bound))]
    [(-letrec-values bnds e)
     (define bound
       (for/fold ([bound : (‚Ñò Var-Name) ‚àÖeq]) ([bnd bnds])
         (set-add-list bound (car bnd))))
     
     (for/fold ([xs : (‚Ñò Var-Name) (-- (fv e) bound)]) ([bnd bnds])
       (-- (fv (cdr bnd)) bound))]
    [(-set! x e) (set-add (fv e) x)]
    #;[(.apply f xs _) (set-union (fv f d) (fv xs d))]
    [(-if e e‚ÇÅ e‚ÇÇ) (‚à™ (fv e) (fv e‚ÇÅ) (fv e‚ÇÇ))]
    [(-amb es)
     (for/fold ([xs : (‚Ñò Var-Name) ‚àÖeq]) ([e es])
       (‚à™ xs (fv e)))]
    [(-Œº/c _ e) (fv e)]
    [(--> cs d _) (apply ‚à™ (fv d) (map fv cs))]
    [(-->i cs mk-d _) (apply ‚à™ (fv mk-d) (map fv cs))]
    [(-case-> clauses _)
     (for/unioneq : (‚Ñò Var-Name) ([clause clauses])
       (match-define (cons cs d) clause)
       (apply ‚à™ (fv d) (map fv cs)))]
    [(-struct/c _ cs _)
     (for/fold ([xs : (‚Ñò Var-Name) ‚àÖeq]) ([c cs])
       (‚à™ xs (fv c)))]
    [(? list? l)
     (for/fold ([xs : (‚Ñò Var-Name) ‚àÖeq]) ([e l])
       (‚à™ xs (fv e)))]
    [_ (log-debug "FV‚ü¶~a‚üß = ‚àÖ~n" e) ‚àÖeq]))

